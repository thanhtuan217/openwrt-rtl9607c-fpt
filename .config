# Target System: Realtek
CONFIG_TARGET_realtek=y
# Subtarget: rtl9607c
CONFIG_TARGET_realtek_rtl9607c=y

# -----------------------------------------------------
# CHỌN MỘT DEVICE PROFILE CHUNG/TRỐNG (GENERIC)
# Ta bỏ qua việc chọn profile thiết bị cụ thể (VD: FPT G-97RG6W)
# Thay vào đó, chọn cấu hình cơ bản nhất cho subtarget
CONFIG_TARGET_realtek_rtl9607c_DEVICE_generic=y 
# -----------------------------------------------------

# --- Các Gói Bắt buộc và Tính năng bạn yêu cầu ---
# LuCI (Giao diện Web)
CONFIG_PACKAGE_luci=y
# Gói hỗ trợ Wi-Fi client/repeater (WISP)
CONFIG_PACKAGE_wpad-basic-wolfssl=y
# relayd (Công cụ cần thiết cho chức năng repeater đơn giản)
CONFIG_PACKAGE_relayd=y
# Kích hoạt IPv6
CONFIG_IPV6=y
CONFIG_PACKAGE_ip6tables=y
# --- Kết thúc cấu hình ---
